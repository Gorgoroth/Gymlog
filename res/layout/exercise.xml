<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:scrollbars="vertical"
	android:background="#666666"
	>	
		
	<!-- Application title -->
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="left|top|center_vertical"
		android:background="#333333"
		android:layout_alignParentTop="true"
		>
		
		<!-- Stats display -->
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="left|top|center_vertical"
			android:background="#333333"
			android:padding="10dp"
			>
	
			<LinearLayout
				android:id="@+id/exerciseLayout2"
				android:orientation="vertical"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1" 
				android:gravity="center_vertical"
				android:layout_gravity="center_vertical"
				>
				<TextView
					android:id="@+id/exerciseName"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Exercise"
					android:gravity="center_vertical"
					android:textSize="10pt"
					android:textStyle="bold"
					/>			
			</LinearLayout>
			<LinearLayout
				android:id="@+id/exerciseLayoutButton"
				android:orientation="vertical"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1" 
				android:gravity="center"
				android:layout_gravity="center|center_vertical"
				>
				<TextView
					android:id="@+id/exerciseMode"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="I'm empty"
					android:gravity="center_vertical|right"
					/>
			</LinearLayout>
			
			<LinearLayout
				android:id="@+id/exerciseInfo"
				android:orientation="vertical"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1" 
				android:gravity="right"
				android:layout_gravity="right|center_vertical"
				>
				<TextView
					android:id="@+id/exerciseProgramName"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Stronglifts"
					android:gravity="center_vertical"
					/>
				<TextView
					android:id="@+id/exerciseWorkoutName"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Workout"
					android:gravity="center_vertical"
					/>
				<TextView
					android:id="@+id/exerciseSession"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Session"
					android:gravity="center_vertical"
					/>
			</LinearLayout>
		
			<LinearLayout
				android:id="@+id/exerciseAddSet"
				android:orientation="horizontal"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1" 
				android:gravity="right"
				android:layout_gravity="right|center_vertical"
				android:visibility="gone"
				>
				<Button
					android:text="@string/AddNewString"
					android:id="@+id/exerciseAdd"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					/>
			</LinearLayout>
		</LinearLayout>
		
		<!-- Set undo -->
		<LinearLayout
			android:id="@+id/exerciseProgressContainer"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="#555555"
			android:layout_gravity="center_vertical|center_horizontal"
			android:gravity="center_vertical|center_horizontal|center"
			android:paddingTop="5dp"
			android:paddingBottom="5dp"
			>
			<ProgressBar 
				android:id="@+id/exerciseOverallProgress"
		        style="?android:attr/progressBarStyleHorizontal" 
		        android:layout_width="fill_parent" 
		        android:layout_height="wrap_content"
		        />			
			<ProgressBar 
				android:id="@+id/exerciseProgress"
		        style="?android:attr/progressBarStyleHorizontal" 
		        android:layout_width="fill_parent" 
		        android:layout_height="wrap_content"
		        /> 
		</LinearLayout>
	</LinearLayout>
	
	<!-- List of sets -->
	<ListView
		android:id="@android:id/list"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="127dip"
		android:layout_marginBottom="70dip"
		/>
	<include layout="@layout/bottomcontrols" />
</RelativeLayout>